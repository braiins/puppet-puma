<% case @db_adapter -%>
<% when 'mysql' -%>
production:
  adapter: mysql2
  encoding: utf8
  reconnect: false
  database: <%= @db_name %>
  pool: 5
  username: <%= @db_user %>
  password: <%= @db_password %>
<% if @db_socket = "UNSET" -%>
  socket: <%= @db_socket %>
<% else -%>
  host: '<%= @db_host %>'
  port: '<%= @db_port %>'
<% end -%>
<% when 'pgsql' -%>
production:
  adapter: postgresql
  encoding: utf8
  database: <%= @db_name %>
  username: <%= @db_user %>
  password: <%= @db_password %>
  host: <%= @db_host %>
  port: <%= @db_port %>
<% end -%>
